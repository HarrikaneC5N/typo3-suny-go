lib.fsMediaGalleryNews = FILES
lib.fsMediaGalleryNews {
    collections.field = sourceUid
    renderObj = COA
    renderObj.5 = TEXT
    renderObj.5 {
        stdWrap.data = file:current:publicUrl
        stdWrap.wrap = <figure class="col-6 col-md-4 mb-0 p-1"><a href="|" data-fancybox="galerie">   
    }
    renderObj.15 = IMAGE 
    renderObj.15 {
        file.import.data = file:current:uid
        file.width = 250c
        file.height = 250c
        altText.data = file:current:alternative // file:current:name
        #stdWrap.wrap = |
    }
    renderObj.20 = TEXT
    renderObj.20.value = </a></figure>
}